name = input("Пожалуйста, введите ваше имя")
surname = input("Пожалуйста, введите вашу фамилию")
age = int(input("Пожалуйста, введите ваш возраст"))
weight = int(input("Пожалуйста, введите ваш вес"))
if age <= 30 and weight in range(50, 100):
    print(name, "вы в хорошем состоянии")
elif age <=30 and age < 40 and weight > 100:
    print(name, "вам стоит посетить диетолога")
elif age > 30 and weight < 50 or weight > 120:
    print(name, "вам стоит заняться собой.")
else:
    if age > 40 and weight < 50 or weight > 120:  print(name, "Вам стоит обратиться к доктору")
